extend ../base/base.pug
block variables
  - const title = "Địa chỉ khách hàng"
  - const currentUrl = "/address"
block main
  section.address
    .container.address__container
      +breadcrumb("Trang chủ", "Địa chỉ")
      h2.main-heading địa chỉ
      .row.my-5
        .col-6
          h3.address__caption địa chỉ của bạn
        .col-6
          div
            a(href="#!") Thêm địa chỉ
      .address__form.row
        .col-12.col-sm-12.col-lg-6.mb-3
          form
            each item in formData
              +form(item)
            .row
              .form-group.col-sm-12.offset-sm-3
                button.button.active Chỉnh sửa địa chỉ
                button.button Xóa
        .col-12.col-sm-12.col-lg-6.mb-3
          form
            each item in formData
              +form(item)
            .row
              .form-group.col-sm-12.offset-sm-3
                button.button.active Chỉnh sửa địa chỉ
                button.button Xóa
      .address__info.col-12.col-sm-12.col-lg-6
        form
          each item in formDataEdit
            +form(item)
          .address__link.text-end
            a(href="#!") Chỉnh sửa địa chỉ
      .address__info.col-12.col-sm-12.col-lg-6
        form
          each item in formDataEdit
            +form(item)
          .address__link.text-end
            a(href="#!") Chỉnh sửa địa chỉ