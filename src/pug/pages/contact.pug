extend ../base/base.pug
block variables
  - const title = "Liên Hệ"
  - const currentUrl = "/contact"

block main
  section.contact
    .container.contact__container
      +breadcrumb("Trang chủ", "Địa chỉ")
      h2.main-heading Liên hệ
      .row.mt-4
        .col-md-8
          iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d958.4274758509016!2d108.2203457272489!3d16.08053675192053!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3142183be4ac21e3%3A0xc08129213de7cc37!2zRmhvbWUgxJDDoCBO4bq1bmcsIEtp4buHdCAyNSBMw70gVGjGsOG7nW5nIEtp4buHdCwgVGjhuqFjaCBUaGFuZywgSOG6o2kgQ2jDonUsIMSQw6AgTuG6tW5nIDU1MDAwMCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1653360299762!5m2!1svi!2s' width='100%' height='450' style='border:0;' allowfullscreen='' loading='lazy' referrerpolicy='no-referrer-when-downgrade')
        .col-md-4
          .contact__company
            .contact__img
              img(src="/assets/images/logo-primary.png" alt="contact logo")
            ul.mt-3
              li.d-flex.align-items-center
                i.fa-solid.fa-location-dot.d-block.mr-1
                p Tầng 4, Toà nhà Hanoi Group. Sô 442 Đội Cấn, P. Cổng Vị, Q.Ba Đình, Hà Nội
              li.d-flex.align-items-center.my-3
                i.fa-solid.fa-phone.mr-1.d-block
                p.mr-1 (04) 6674 2332
              li.d-flex.align-items-center
                .d-flex.align-items-center
                  i.fas.fa-envelope.mr-1.d-block
                  p Support@bizweb.vn
            .contact__social
              h3.contact__title follow us:
              ul.contact__list
                each socialItem in socialList
                  li.contact__item.mr-2
                    i(class=socialItem)
      .contact__form.col-md-8.mt-5
        .form
          each item in formContact
            +form(item)
          .contact__button.col-md-12.offset-md-3
            button.button Gửi
