mixin form({label, id, type, value})
  .row
    if type == "checkbox"
      .form-check.form-group.col-sm-12.offset-sm-3
        label(class="col-sm-5 col-form-label")= label
          input(class="form-check-input" type= type  required)
    else
      .row.mb-3
        label.col-sm-3.col-form-label= label
        .col-sm-9
          input.form-control(type= type value= value)
